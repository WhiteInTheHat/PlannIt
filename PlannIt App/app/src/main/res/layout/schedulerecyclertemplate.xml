<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="372dp"
            android:layout_height="175dp"
            android:background="@drawable/cosmicbackground4">

            <TextView
                android:id="@+id/endText"
                android:layout_width="57dp"
                android:layout_height="35dp"
                android:layout_marginStart="188dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text=" End:" />

            <TextView
                android:id="@+id/startText"
                android:layout_width="57dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text=" Start:" />

            <TextView
                android:id="@+id/endDateTemplate"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00" />

            <TextView
                android:id="@+id/startDateTemplate"
                android:layout_width="85dp"
                android:layout_height="36dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00" />

            <TextView
                android:id="@+id/daysActiveTemplate"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="116dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Monday, Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday" />

            <TextView
                android:id="@+id/scheduleLabelTemplate"
                android:layout_width="214dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Label" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>